{
  "compilerOptions": {
    "sourceMap": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "module": "CommonJS",
    "target": "ES2018",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "express",
      "body-parser",
      "mongoose"
    ],
    "baseUrl": "."
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
